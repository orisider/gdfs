<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.orisider.gdfs">
    <uses-sdk android:minSdkVersion="15"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.USE_CREDENTIALS"/>
    <uses-permission android:name="android.permission.ACCOUNT_MANAGER" />

    <application android:icon="@drawable/icon" android:label="@string/app_name" android:theme="@style/Theme.Sherlock"
            android:name=".GDFSApp">
        <activity android:name=".ui.activity.MainActivity"
                  android:theme="@style/Theme.Sherlock"
                >
            <meta-data android:name="com.google.android.apps.drive.APP_ID" android:value="id=445798695489"/>
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.activity.GetAccountActivity"
                android:theme="@android:style/Theme.NoDisplay"
                />
        <activity android:name=".ui.activity.FileListActivity"
                  android:theme="@style/Theme.Sherlock"
                />
        <activity android:name=".ui.activity.GoogDriveOpen" android:exported="true"
                  android:theme="@style/Theme.Sherlock"
                  android:launchMode="singleTop"
                android:label="GDFS Share">
            <meta-data android:name="com.google.android.apps.drive.APP_ID" android:value="id=445798695489"/>
            <intent-filter>
                <action android:name="com.google.android.apps.drive.DRIVE_OPEN"/>
                <!--
                <action android:name="android.intent.action.VIEW"/>
            -->
                <data android:mimeType="application/vnd.google-apps.drive-sdk.445798695489"/>
                <data android:mimeType="*/*"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.orisider.gdfs.noti_open"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <!--
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <action android:name="android.intent.action.SEND_MULTIPLE" />
                <data android:mimeType="text/plain" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            -->
            <!--
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <data android:mimeType="*/*"/>
            </intent-filter>
            -->
        </activity>
        <service android:name="com.orisider.gdfs.service.UploadFile"
                android:exported="false">
            <intent-filter>
                <action android:name="com.orisider.gdfs.upload" />
            </intent-filter>
        </service>
    </application>
</manifest>
